<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GeoTagApp</title>
    <link rel='stylesheet' href='./stylesheets/style.css'/>
</head>

<body>

<header>
    <img src="./images/location.png" width="100" alt="an image of a map and location">
    <h1>GeoTagApp</h1>
    <nav>
        <a href="#">About</a> | <a href="#">Help</a> | <a href="/">Home</a>
    </nav>
</header>

<main>
    <div class="row">
        <div class="col-4">
            <section class="tagging">
                <h2>Tagging</h2>

                <form id="tag-form" action="/tagging" method="post">
                    <fieldset class="tagging_fieldset">
                        <legend>Enter new GeoTag</legend>

                        <!-- `latitude` -->
                        <label id="tagging_latitude_label" for="tagging_latitude_input"
                               class="tagging_form_element">latitude</label>
                        <input id="tagging_latitude_input" name="latitude" placeholder="49.01379" class="tagging_form_element"
                               value="<%= lati %>" required/>

                        <!--  `longitude` -->
                        <label id="tagging_longitude_label" for="tagging_longitude_input"
                               class="tagging_form_element">longitude</label>
                        <input id="tagging_longitude_input" name="longitude" placeholder="8.390071" class="tagging_form_element"
                               value="<%= longi %>" required/>

                        <!--  `name` -->
                        <label id="tagging_name_label" for="tagging_name_input"
                               class="tagging_form_element">name</label>
                        <input id="tagging_name_input" name="name" placeholder="Castle" maxlength="10"
                               class="tagging_form_element"
                               required/>

                        <!--  `hashtag` -->
                        <label id="tagging_hashtag_label" for="tagging_hashtag_input"
                               class="tagging_form_element">hashtag</label>
                        <input id="tagging_hashtag_input" name="hashtag" placeholder="#sight" maxlength="11" pattern="#.*"
                               class="tagging_form_element"/>

                        <button id="tagging_send_button" class="tagging_form_element">submit</button>
                    </fieldset>
                </form>

            </section>
        </div>
        <div class="col-8">
            <section class="discovery">
                <div class="row">
                    <div class="col-12">
                        <h2>Discovery</h2>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">

                        <form id="filter-form" action="/discovery" method="post">
                            <fieldset>
                                <legend>Filter by Searchterm</legend>

                                <!--  `searchterm` -->
                                <label id="discovery_searchterm_label" for="discovery_searchterm_input">search
                                    term</label>
                                <input id="discovery_searchterm_input" name="discovery" placeholder="#aim"/>

                                <!--  versteckte Koordinate (`latitude`) -->
                                <input id="discovery_tagging_latitude_input" name="latitude" type="hidden" value="<%= lati %>"/>

                                <!--  versteckte Koordinate (`longitude`) -->
                                <input id="discovery_tagging_longitude_input" name="longitude" type="hidden" value="<%= longi %>"/>

                                <button id="discovery_send_button">apply</button>
                            </fieldset>
                        </form>
                    </div>
                </div>

                <div class="row">
                    <div class="col-4">
                        <div class="taglist">
                            <ul id="results">
								<% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
									<li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
								<% }); %>
                            </ul>
                        </div>
                    </div>

                    <div class="col-8">
                        <div class="tagmap">
                            <img id="result-img" src="./images/mapview.jpg" alt="a map with locations"
                            data-tags="<%= JSON.stringify(taglist) %>"/>
                            <div class="caption">Result map</div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    </div>
</main>

<footer>
    <span>2017 by LKIT</span>
</footer>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
<script src="./javascripts/geotagging.js"></script>

</body>
</html>