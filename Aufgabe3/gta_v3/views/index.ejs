<!DOCTYPE html>

<!-- File origin: VS1LAB A1a -->

<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>GeoTagApp</title>
    <link rel="stylesheet" href="./stylesheets/style.css"/>
    <link rel='stylesheet' href='https://unpkg.com/leaflet@1.9.4/dist/leaflet.css'
          integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY="
          crossorigin=""/>
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"
            integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo="
            crossorigin=""></script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
<header class="header">
    <img src="./images/location.png" class="header__image" alt="an image of a map and location">
    <h1 class="header__title">GeoTagApp</h1>
    <nav class="header__navigation">
        <a href="#">About</a> | <a href="#">Help</a> | <a href="/">Home</a>
    </nav>
</header>

<main class="main">
    <section class="main__tagging col-4">
        <h2>Tagging</h2>

        <!-- ############### VS1Lab 1a Form 1 Start -->
        <form id="tag-form" action="/tagging" method="post">
            <fieldset id="fieldset-tag">
                <legend id="legend-tag">Add a new GeoTag</legend>
                <label id="lat-label" class="row" for="latitude_tagging">Latitude:</label>
                <input class="row" type="text" id="latitude_tagging" placeholder="49.01379" disabled>
                <label id="long-label" class="row" for="longitude_tagging">Longitude:</label>
                <input class="row" type="text" id="longitude_tagging" placeholder="8.404435" disabled>
                <label id="name-label" class="row" for="name_tagging">Name:</label>
                <input class="row" type="text" id="name_tagging" placeholder="e.g. Central Berlin"
                       pattern="[A-Za-z]*"
                       maxlength="10" required>
                <label id="hashtag-label" class="row" for="hashtag_tagging">Hashtag:</label>
                <input class="row" type="text" id="hashtag_tagging" placeholder="e.g. #ber"
                       pattern="#([A-Za-z]{1,10})"
                       maxlength="11">
                <input class="row" type="submit" id="add_tagging" value="Add Tag">
            </fieldset>
        </form>
        <!-- ############### VS1Lab 1a Form 1 End -->

    </section>

    <section class="main__discovery col-8">
        <h2 class="discovery__title">Discovery</h2>

        <!-- ############### VS1Lab 1a Form 2 Start -->
        <form class="discovery__search" id="discoveryFilterForm" action="/discovery" method="post">
            <fieldset>
                <legend id="legend-discovery">Search</legend>
                <label id="search-label" class="row" for="searchterm">Search term or keywords:</label>
                <input class="row" type="search" id="searchterm" placeholder="e.g. Berlin" required>
                <input class="row" type="hidden" id="discovery__latitude">
                <input class="row" type="hidden" id="discovery__longitude">
                <input id="search-input" class="row" type="submit" value="Search">
            </fieldset>
        </form>
        <!-- ############### VS1Lab 1a Form 2 End -->

        <div class="discovery__wrapper">
            <div class="discovery__taglist col-4">
                <ul class="discovery__results" id="discoveryResults">
                    <% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
                        <li><%= gtag.getName() %> ( <%= gtag.getLatitude() %>,<%= gtag.getLongitude() %>) <%= gtag.getHashtag() %> </li>
                    <% }); %>
                </ul>
            </div>

            <div class="discovery__map col-8" id="map">
                <img src="./images/mapview.jpg" alt="a map with locations" id="mapView"/>
                <span>Result map</span>
            </div>
        </div>
    </section>

</main>

<footer class="footer">
    <span>(c) 2021/22 HKA_IWI_VSYS</span>
</footer>
<script src="./javascripts/geotagging.js"></script>
</body>

</html>
